
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<partial name="_RoleForm.cshtml" model="new RoleFormViewModel()" />

<table class="table table-striped mt-3">
    <thead class="bg-dark text-white">
        <th>Id</th>
        <th>Roles</th>
        <th>Action</th>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                  <td class="align-middle">
                          <a class="btn btn-outline-primary"
               asp-action="Edit" asp-route-id="@item.Id" 
                 asp-controller="Role"><i class="bi bi-pencil-square"></i>Edit </a> |


                <a class="btn btn-danger"  onclick="return confirm('Are you want Delete ?');"  asp-action="Delete" asp-route-id="@item.Id" asp-controller="Role">
                    <i class="bi bi-trash"></i>Delete </a>
               </td>
            </tr>
            
        }
    </tbody>

</table>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}