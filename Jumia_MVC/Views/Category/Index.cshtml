@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category";
}

<div class="row g-0 mt-6 ">
  <div class="col-md-8 offset-md-2">
       <table class="table caption-top">
           <thead>
               <tr class="text-center table-dark my-3">
                   
                   <th>@Html.DisplayNameFor(model => model.Image) </th>
                   <th>@Html.DisplayNameFor(model => model.Name)</th>
                 
                        <th>Action</th>

                    

               </tr>
           </thead>
           <tbody>
            @foreach (var item in Model)
            {
              <tr>
                    <td class="align-middle">
                    <img class="rounded-circle" src="@item.Image" alt="@item.Name" style="max-width:150px">
                    </td>
                    <td class="align-middle">
                    @Html.DisplayFor(modelitem => item.Name)
                    </td>

                 

                   
                 <td class="align-middle">
                  <a class="btn btn-outline-primary"
               asp-action="Edit" asp-route-id="@item.Id" 
                 asp-controller="Category"
                ><i class="bi bi-pencil-square"></i>Edit </a> |

                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id" 
                 asp-controller="Category"><i class="bi bi-eye"></i>Details </a> |

                <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id" asp-controller="Category"
               >
                    <i class="bi bi-trash"></i>Delete </a>
               </td>

                    
                 
               

          </tr>
                
            }
         

           </tbody>
       </table>
   </div>
</div>


@await Html.PartialAsync("CustomButton","Category")
