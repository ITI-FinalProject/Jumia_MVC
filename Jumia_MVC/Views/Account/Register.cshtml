@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

@model RegisterVM;

@{ 
    ViewData["Title"] = localizer["title"];
}

<link rel="stylesheet" href="~/css/Login.css"/>

<div class="container mt-5"
    dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft? "rtl" : "ltr")">
    <div class="row">
        <div class="col-md-5 d-flex align-items-center">
        <p>
            <h1>@localizer["Register"] </h1>
        </p>
        </div>

        @if(TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>@localizer["sorry"] </b> - @TempData["Error"] </span>
                </div>
            }

            <div class="col-md-6 offset-md-1">
                <form asp-action="Register" class="mt-4 mt-md-0">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FullName">@localizer["FullName"] </label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Emaill">@localizer["Email"] </label>
                        <input asp-for="Emaill" class="form-control" />
                        <span asp-validation-for="Emaill" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">@localizer["pass"]</label>
                        <input asp-for="Password" class="form-control" id="inputPassword3" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">@localizer["ConfirmPassword"] </label>
                        <input asp-for="ConfirmPassword" class="form-control" id="inputPassword3" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 d-flex">
                        <input class="btn b1 float-right" type="submit" value=@localizer["sign"] />
                        <a class="btn b2 float-left" asp-controller="Home" asp-action="Index">@localizer["Cancel"] </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
