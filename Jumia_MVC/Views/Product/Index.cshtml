@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product";
}
<div class="row cont">
    <div class="col-sm-3">
        <div class="card ">
            <div class="card-body type_card">
                <h2 class="card-title">Product Type</h2>
                <a class="card-text" asp-action="FilterProducts" asp-route-id= "0" >All Products</a>
                <a class="card-text" asp-action="FilterProducts" asp-route-id= "1">Electrionic Devices</a>
                <a class="card-text" asp-action="FilterProducts" asp-route-id= "1">Prevent Corona</a>
                <a class="card-text" asp-action="FilterProducts" asp-route-id= "5">Sports</a>
                <a class="card-text" asp-action="FilterProducts" asp-route-id= "1">Lighting</a>
                <a class="card-text" asp-action="FilterProducts" asp-route-id= "3">Clothes</a>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
            <div class="row g-0">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card card-border-none resp-wrap-align-center">

                            <a asp-action="Details" asp-route-id="@item.Id">
                                <img src="@item.Image" class="card-img-top img-fluid rounded" style="height:300px" />
                            </a>
                            @*     <a href="@Url.Action("Details")" id="@item.Id">
                                <img src="@Url.Content(@item.Image)" class="card-img-top img-fluid rounded" />
                                </a>*@



                            @if (item.Discount != 0)
                            {
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <div class="card-img-overlay">
                                        <span class="mx-2 text-light p-1 bg-danger text-white">Discount</span>
                                    </div>
                                </a>
                            }

                            <div class="card-body">
                                <div class="overflow-hidden">
                                    <h5 class="card-title fs-6 d-inline-block text-truncate font-monospace text-start text-primary">
                                        @item.Name
                                    </h5>
                                </div>
                                <div class="styleprice">
                                    <p class="card-text text-muted">@item.Price.ToString("c") </p>
                                    @if (item.Discount != 0)
                                    {
                                        <p class="card-text text-danger text-decoration-line-through">
                                            @item.Old_Price.ToString("c")
                                        </p>
                                    }
                                    else
                                    {
                                        <p></p>
                                    }



                                </div>
                            </div>
                            <div class="alert alert-dark stylealert">
                                <button style="border: none; background-color: #d3d3d4"
                                    (click)="addToCart(item)">
                                    <i class="fas fa-cart-plus text-primary"></i>
                                </button>

                                <i *ngIf="addToFavourit"
                               class="fas fa-heart text-primary"
                               (click)="removeItemFav(item)"></i>
                            </div>



                        </div>
                    </div>
                }

            </div>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    @await Html.PartialAsync("CustomButton","Product")

}
