@using Jumia_MVC.Data.ViewModel
@using Jumia_MVC.Controllers
@model FavoriteVM

@{
    ViewData["Title"] = "Favorite Products";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center" style="padding-top:70px">
            <h2>Your Favorite Products!</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Favorite.FavoriteItems)
                {
                    <tr>
                        <td class="align-middle"><img src="@item.Product.Image" class="card-img-top img-fluid rounded" style="height:100px" /></td>
                        <td class="align-middle">@item.Product.Name</td>
                        <td class="align-middle">@item.Product.Price.ToString("c")</td>
@*                        <td class="align-middle">@((item.Amount*item.Product.Price).ToString("c"))</td>
*@                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Favorite" asp-action="RemoveItemFromFavorite" asp-route-id="@item.Product.Id">
                                <i class="bi bi-heart"></i>
                            </a>
                            | |
                            <a class="text-success" >
                                <i class="fas fa-cart-plus"></i>
                            </a>
                            </td>
                        <td class="align-middle">
                                <div class="btn-group">
                                    <a class="btn btn-outline-success" asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.Id">Go Back To Product</a>
                                </div>
                            
                        </td>
                    </tr>
                }
            </tbody>
            @*<tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @Model.FavoriteTotal.ToString("c")
                    </td>
                    <td></td>
                </tr>
            </tfoot>*@
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Product" asp-action="Index">
                    Browse More Products
                </a>
            </div>
        </div>
    </div>

</div>

