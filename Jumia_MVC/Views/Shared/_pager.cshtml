<div class="container">
    @if(Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end ">

            @if (Model.CurrentPage >1)
            {
                   <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="Product" asp-route-pg="1"> First</a>
                    </li>

                     <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="Product" asp-route-pg="@(Model.CurrentPage-1)"> Previous </a>
                    </li>
                
            }

            @for(var pag=Model.StartPage; pag <= Model.EndPage; pag++)
            {
                <li class="page-item @(pag == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="index" asp-controller="Product" asp-route-pg="@pag"> @pag</a>

                </li>
            }

            @if(Model.CurrentPage < Model.TotalPages)
            {
                      <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="Product" asp-route-pg="@(Model.CurrentPage +1) "> Next</a>
                    </li>

                        <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="Product" asp-route-pg="@(Model.TotalPages) "> Last</a>
                    </li>

            }

        </ul>
    }

</div>